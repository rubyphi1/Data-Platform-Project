# id = int(f"{year}{month:02}")
# print(id)
def get_today_id():
    today = datetime.now()
    month = today.month 
    year = today.year
    if month == 1:
        month = 12
        year = year -1
    else:
        month = month -1
    id = int(f"{year}{month:02}")
    return month,year,id
month = get_today_id()[0]
year = get_today_id()[1]
print(month)